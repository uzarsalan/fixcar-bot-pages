// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model postgress_sessions {
  id      String @unique
  session String
}

model User {
  id         Int     @id @default(autoincrement())
  telegramId BigInt? @db.BigInt @unique
  firstName  String?
  lastName   String?
  middleName String?
  cars       Car[]
  posts      Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  car       Car      @relation(fields: [carId], references: [id])
  carId     Int
  Answer    Answer[]
}

model Answer {
  id           Int     @id @default(autoincrement())
  market       Market  @relation(fields: [marketId], references: [id])
  marketId     Int
  post         Post    @relation(fields: [postId], references: [id])
  postId       Int
  price        Decimal
  message      String
  availability String
}

model Car {
  id     Int     @id @default(autoincrement())
  User   User?   @relation(fields: [userId], references: [id])
  userId Int?
  grz    String?
  vin    String?
  data   Json
  Post   Post[]
}

model Market {
  id          Int      @id @default(autoincrement())
  name        String
  phoneNumber String
  address     String
  location    Json
  Answer      Answer[]
}
